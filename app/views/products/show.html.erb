<% title "Product" %>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>
<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>
<p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>
<p>
  <strong>Released At:</strong>
  <%= @product.released_at %>
</p>
<p>
  <strong>Last Purchased At:</strong>
  <%= @product.last_purchase_at %>
</p>
<p>
  <strong>Last Sale At:</strong>
  <%= @product.last_sale_at %>
</p>

<p>
  <%= link_to "Edit", edit_product_path(@product) %> |
  <%= link_to "Destroy", @product, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", products_path %>
</p>
